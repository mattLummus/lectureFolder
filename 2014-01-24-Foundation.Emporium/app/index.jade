doctype html
html(class="no-js" lang="en")
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title The Emporium
    link(rel='stylesheet' href='/css/normalize.css')
    link(rel='stylesheet' href='/css/foundation.css')
    link(rel='stylesheet' href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/source/main.js')
  body
    .row
      .small-12.columns
        .panel
          h1 The Emporium
    .row
      .small-8.columns
        form
          .row
            .small-5.columns
              label Item
              input(type='text' id='item' placeholder='puppy' autofocus)
            .small-2.columns
              label Quantity
              input(type='text' id='quantity' placeholder='10')
            .small-2.columns
              label Amount
              input(type='text' id='amount' placeholder='3.50')
            .small-3.columns
              label &nbsp;
              button.small.radius#addItem Add Item
      .small-4.columns
        table
          thead
            tr
              th Item
              th Quantity
              th Amount
              th Total
          tfoot
            tr
              td
              td 0
              td $0.00
              td $0.00
          tbody

    script $(document).foundation();
