doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/flags.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-5.columns
        h1=title
      .small-2.columns
        h3#cText Country
      .small-2.columns
        h3#fText Flag
      .small-1.columns
        button.tiny.radius#match Match!
      .small-2.columns
        #timer
    .row
      .small-1.columns
        each f in flagsF
          p.flag(class='flag-' + f.code, data-code=f.code)
      .small-11.columns
        each f in flagsC
          p.country(class=f.country)= f.country

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

