doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Gadget Express
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Gadget Express
        .small-6.columns
          form#userForm
            label User Name
              input#userName(type='text' name='name')
            label Deposit
              input#userDeposit(type='text' name='balance')
            button.tiny#createUser Create User
        .small-6.columns
          form#gadgetForm
            label Gadget Name
              input#gadgetName(type='text' name='name')
            label Cost
            input#gadgetCost(type='text' name='cost')
            label Quantity
              input#gadgetQuantity(type='text' name='quantity')
            button.tiny#createGadget Create Gadget
    .row
      .small-6.columns
        table#users
          thead
            th User
            th Balance
            th Products
      .small-6.columns
        table#gadgets
          thead
            th
            th Gadget
            th Cost
            th Available
            th Users
            th Quantity
            th
    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/main.js')

